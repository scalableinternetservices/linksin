<%= form_for(@user, url: yield(:url)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div>
    <div class="field">
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, class: 'input', placeholder: "Name" %>
    </div>

    <div class="field">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, class: 'input', placeholder: "Email" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, class: 'input', placeholder: "Password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "label" %>
      <%= f.password_field :password_confirmation, class: 'input', placeholder: "Password" %>
    </div>

    <div class="field">
      <p class="control has-text-centered">
        <%= f.submit yield(:button_text), class: "button is-primary", style: "width: 100%" %>
      </p>
    </div>
  </div>
  
<% end %>