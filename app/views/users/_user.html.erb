<tr class="LI_TableRow">
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= link_to 'Show', user %></td>
      <td><% if current_user.admin? || (current_user == user) %>
                      <%= link_to 'Edit', edit_user_path(user) %>
          <% end %>
      </td>
      
      <td><% if current_user.admin? && (current_user != user) %>
                      <%= link_to 'Destroy', user, method: :delete,
                      data: { confirm: 'Are you sure?' } %>
          <% end %>
      </td>
</tr>