<% provide(:title, @user.name) %>
<div class="LI_UserShow">
  <div class="LI_UserShowHead">
    <%= gravatar_for @user, style: "margin: 10px;" %>
    <div>
      <h3><%= @user.name %></h3>
      <p><%= @profile.description %></p>
    </div>

    <% if current_user == @user %>
      <%= link_to 'Edit', edit_profile_path(@profile) %>
    <% end %>
  </div>
  <div class="column">
    <div>
      <h5>Games Played</h5>
      <p><%= @profile.games %></p>
    </div>
    <div>
      <h5>Accounts</h5>
      <p><%= @profile.accounts %></p>
    </div>
  </div>
</div>